<%= simple_form_for @pet,:url => wizard_path, :method => :put do |f| %>
  <% if @pet.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= yield f %>
  
  <div class="actions">
    <%= f.submit "Continue" %>
    or <%= link_to "skip this step", next_wizard_path %>
  </div>
<% end %>