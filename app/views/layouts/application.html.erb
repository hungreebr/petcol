<!DOCTYPE html>
<html>
<head>
  <title>MeuPeludo</title>
  
  <%= javascript_include_tag "application" %>
   <%= javascript_include_tag "bootstrap.min" %>
   <%= javascript_include_tag "jquery.cloneposition" %>
   <%= javascript_include_tag "theme" %>
   <%= javascript_include_tag 'jquery-1.3.2.min' %>
   <%= javascript_include_tag "webflow" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
  <script>
      WebFont.load({
        google: {
          families: ["Ubuntu:300,400,500,700","Open Sans:300,400,600,700,800","Bitter:400,700","Lato:100,300,400,700,900"]
        }
      });
    </script>
</head>
<body>
<% if user_signed_in? %>
 <div class="navbar navbar-inverse navbar-top">
	<div class="navbar-inner" style="border-radius: 0px;">
		<div class="container">
			<div id="logo"></div>
			<ul class="nav">
				<li><%= link_to "Meus Pets", profile_path %></li>
			</ul>	
			<ul class="nav pull-right">
			<% if user_signed_in? %>
				<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
				<li><%= link_to "Log Out", logout_path %>
				
			<% else %>
				<li><%= link_to "Cadastre-se", register_path %></li>
				<li><%= link_to "Login", login_path %></li>
			<% end %>
		
			</ul>
		</div>
	</div>
</div>
<% else %>
<% end %>
	
	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>">
			<button class="close" data-dismiss="alert">x</button> 
			<%= message %>
		</div>
	<% end %>
<%= yield %>
</div>
<footer class="footerbar">
    <p class="footertxt">Meu Peludo - Todos os Direitos Reservados</p>
  </footer>
</body>
</html>
