<div class="page-header"> 
	<h1> Todos os Status </h1> <%= link_to "Postar novo Status", new_status_path, class: "btn btn-success" %>
</div>


<% @statuses.each do |status| %>
	<div class="status">
		<strong><%= status.name %></strong>
		<p><%= status.content %></p>
		<div class="meta">
		
		<%= link_to time_ago_in_words(status.created_at) + " atrás", status %>
		<span class="admin">
			| <%= link_to "Editar", edit_status_path(status) %> |
			<%= link_to "Excluir", status, method: :delete, data: { confirm: "Você tem certeza que deseja excluir?" }  %>
		</span>
		</div>
	</div>
<% end %>