<h1>Listing posts</h1>

<table>
  <tr>
    <th>Pet</th>
    <th>Author</th>
    <th>Picture</th>
    <th>Story</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.pet %></td>
    <td><%= post.author %></td>
    <td><%= post.picture %></td>
    <td><%= post.story %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

