<h1>Crop Avatar</h1>
  <%= javascript_include_tag 'jquery.Jcrop' %>
<%= image_tag  @pet.pet_image_url(:large), id: "cropbox" %>

<h4>Preview</h4>
<div style="width:100px; height:100px; overflow:hidden">
  <%= image_tag @pet.pet_image.url(:large), :id => "preview" %>
</div>

<%= form_for @pet do |f| %>
  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %>
  <% end %>
  <div class="actions">
    <%= f.submit "Crop" %>
  </div>
<% end %>