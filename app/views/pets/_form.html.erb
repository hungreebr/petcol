<%= simple_form_for @pet, input_html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, as: :hidden, input_html: { value: @author_id } %>
    <%= f.input :name %>
    <%= f.input :birthday, as: :date %>
    <%= f.input :breed %>
    <%= f.input :gender %>
    <%= f.input :hobbies %>
    <%= f.input :description, as: :text %>
    <%= f.input :pet_image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
